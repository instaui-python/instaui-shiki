{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "libs/*"
      ]
    },
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    // "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    // "noUncheckedSideEffectImports": true
  },
  "include": [
    "libs/**/*.ts",
    "libs/**/*.tsx",
    "libs/**/*.vue",
    "types",
  ]
}